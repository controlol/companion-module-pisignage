{
	"name": "companion-module-pisignage",
	"version": "0.1.0",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"format": "prettier -w .",
		"package": "npm run build && companion-module-build",
		"build": "rimraf dist && npm run build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "npm run lint:raw ."
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/controlol/companion-module-pisignage.git"
	},
	"engines": {
		"node": "^22.14",
		"yarn": "^4"
	},
	"dependencies": {
		"@companion-module/base": "~1.12.1",
		"@ts-rest/core": "^3.52.1",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.3.0",
		"@stylistic/eslint-plugin": "^5.4.0",
		"@types/node": "^22.14.1",
		"eslint": "^9.24.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.30.1"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"packageManager": "yarn@4.10.2"
}
